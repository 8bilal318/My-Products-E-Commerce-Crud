<%- include('../partials/header', { title: 'Update Coat', navButton: { text: 'â¬… Back to List', link: '/coats', class: 'btn-secondary' } }) %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Update Coat</h4>
      </div>
      <div class="card-body">
        <form action="/coats/edit/<%= product._id %>" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Coat Name</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= product.name %>" required>
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Price (Rs)</label>
            <input type="number" id="price" name="price" class="form-control" value="<%= product.price %>" required>
          </div>
          <button type="submit" class="btn btn-success w-100">Update Coat</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
